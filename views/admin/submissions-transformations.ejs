<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="admin-body">
    <div class="admin-container">
        <%- include('../partials/admin-sidebar', { currentPage: 'admin-submissions' }) %>

        <main class="admin-main">
            <header class="admin-header">
                <div class="header-left">
                    <a href="/admin/submissions" class="back-btn">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h1>Digital Transformation Submissions</h1>
                </div>
                <div class="admin-user">
                    <i class="fas fa-user-circle"></i>Welcome, <%= adminUser %>
                </div>
            </header>

            <div class="submissions-container">
                <div class="submissions-header">
                    <div class="submissions-stats">
                        <div class="stat-item">
                            <span class="stat-number"><%= transformations.length %></span>
                            <span class="stat-label">Total Transformations</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number"><%= transformations.filter(t => t.status === 'new').length %></span>
                            <span class="stat-label">New</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number"><%= transformations.filter(t => t.status === 'contacted').length %></span>
                            <span class="stat-label">Contacted</span>
                        </div>
                    </div>
                </div>

                <div class="submissions-grid">
                    <% transformations.forEach(transformation => { %>
                        <div class="submission-card">
                            <div class="submission-header">
                                <div class="submission-avatar">
                                    <i class="fas fa-rocket"></i>
                                </div>
                                <div class="submission-basic">
                                    <h3><%= transformation.name %></h3>
                                    <p class="submission-email"><%= transformation.email %></p>
                                </div>
                                <div class="submission-status">
                                    <span class="status status-<%= transformation.status %>"><%= transformation.status.replace('-', ' ') %></span>
                                </div>
                            </div>
                            
                            <div class="submission-details">
                                <div class="detail-row">
                                    <i class="fas fa-phone"></i>
                                    <span><%= transformation.phone || 'Not provided' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-building"></i>
                                    <span><%= transformation.company || 'Not provided' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-industry"></i>
                                    <span><%= transformation.industry || 'Not specified' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-globe"></i>
                                    <span><%= transformation.website || 'Not provided' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-dollar-sign"></i>
                                    <span><%= transformation.budget || 'Not specified' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-clock"></i>
                                    <span><%= transformation.timeline || 'Not specified' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-calendar"></i>
                                    <span><%= new Date(transformation.date).toLocaleDateString() %></span>
                                </div>
                            </div>
                            
                            <% if (transformation.goals) { %>
                                <div class="submission-goals">
                                    <h4>Transformation Goals:</h4>
                                    <p><%= transformation.goals %></p>
                                </div>
                            <% } %>
                            
                            <div class="submission-message">
                                <h4>Transformation Vision:</h4>
                                <p><%= transformation.message %></p>
                            </div>
                            
                            <div class="submission-actions">
                                <button class="btn-primary" onclick="updateStatus('<%= transformation.id %>', 'contacted')">
                                    <i class="fas fa-phone"></i> Schedule Call
                                </button>
                                <button class="btn-secondary" onclick="updateStatus('<%= transformation.id %>', 'proposal-sent')">
                                    <i class="fas fa-calendar-plus"></i> Book Meeting
                                </button>
                                <button class="btn-success" onclick="updateStatus('<%= transformation.id %>', 'completed')">
                                    <i class="fas fa-check"></i> Complete
                                </button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
    </div>

    <%- include('../partials/admin-styles') %>
    <style>
        .submission-goals {
            margin-bottom: 1.5rem;
        }

        .submission-goals h4 {
            margin: 0 0 0.5rem 0;
            color: var(--dark);
            font-size: 0.9rem;
        }

        .submission-goals p {
            margin: 0;
            color: var(--medium-gray);
            font-size: 0.9rem;
            line-height: 1.5;
            background: #e8f5e8;
            padding: 1rem;
            border-radius: 8px;
            border-left: 4px solid #28a745;
        }
    </style>
    <script src="/js/admin.js"></script>
</body>
</html>