<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="admin-body">
    <div class="admin-container">
        <%- include('../partials/admin-sidebar', { currentPage: 'admin-submissions' }) %>

        <main class="admin-main">
            <header class="admin-header">
                <div class="header-left">
                    <a href="/admin/submissions" class="back-btn">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h1>Contact Form Submissions</h1>
                </div>
                <div class="admin-user">
                    <i class="fas fa-user-circle"></i>Welcome, <%= adminUser %>
                </div>
            </header>

            <div class="submissions-container">
                <div class="submissions-header">
                    <div class="submissions-stats">
                        <div class="stat-item">
                            <span class="stat-number"><%= contacts.length %></span>
                            <span class="stat-label">Total Contacts</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number"><%= contacts.filter(c => c.status === 'new').length %></span>
                            <span class="stat-label">New</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number"><%= contacts.filter(c => c.status === 'contacted').length %></span>
                            <span class="stat-label">Contacted</span>
                        </div>
                    </div>
                </div>

                <div class="submissions-grid">
                    <% contacts.forEach(contact => { %>
                        <div class="submission-card">
                            <div class="submission-header">
                                <div class="submission-avatar">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="submission-basic">
                                    <h3><%= contact.name %></h3>
                                    <p class="submission-email"><%= contact.email %></p>
                                </div>
                                <div class="submission-status">
                                    <span class="status status-<%= contact.status %>"><%= contact.status.replace('-', ' ') %></span>
                                </div>
                            </div>
                            
                            <div class="submission-details">
                                <div class="detail-row">
                                    <i class="fas fa-phone"></i>
                                    <span><%= contact.phone || 'Not provided' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-building"></i>
                                    <span><%= contact.company || 'Not provided' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-cogs"></i>
                                    <span><%= contact.service %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-dollar-sign"></i>
                                    <span><%= contact.budget || 'Not specified' %></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-calendar"></i>
                                    <span><%= new Date(contact.date).toLocaleDateString() %></span>
                                </div>
                            </div>
                            
                            <div class="submission-message">
                                <h4>Message:</h4>
                                <p><%= contact.message %></p>
                            </div>
                            
                            <div class="submission-actions">
                                <button class="btn-primary" onclick="updateStatus('<%= contact.id %>', 'contacted')">
                                    <i class="fas fa-phone"></i> Schedule Call
                                </button>
                                <button class="btn-secondary" onclick="updateStatus('<%= contact.id %>', 'proposal-sent')">
                                    <i class="fas fa-calendar-plus"></i> Book Meeting
                                </button>
                                <button class="btn-success" onclick="updateStatus('<%= contact.id %>', 'completed')">
                                    <i class="fas fa-check"></i> Complete
                                </button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
    </div>

    <%- include('../partials/admin-styles') %>
    <script src="/js/admin.js"></script>
</body>
</html>