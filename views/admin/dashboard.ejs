<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="admin-body">
    <div class="admin-container">
        <%- include('../partials/admin-sidebar', { currentPage: 'admin-dashboard' }) %>

        <main class="admin-main">
            <div class="dashboard-header">
                <div class="header-content">
                    <h1>Dashboard Overview</h1>
                    <p>Welcome back, <%= adminUser %>! Here's what's happening with your business.</p>
                </div>
                <div class="header-actions">
                    <div class="quick-stats">
                        <div class="quick-stat">
                            <span class="stat-value"><%= data.stats.conversionRate %></span>
                            <span class="stat-label">Conversion Rate</span>
                        </div>
                        <div class="quick-stat">
                            <span class="stat-value"><%= data.stats.avgProjectValue %></span>
                            <span class="stat-label">Avg Project Value</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= data.stats.totalProjects %></h3>
                        <p>Total Projects</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= data.stats.activeProjects %></h3>
                        <p>Active Projects</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= data.stats.totalClients %></h3>
                        <p>Total Clients</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= data.stats.monthlyRevenue %></h3>
                        <p>Monthly Revenue</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= data.stats.totalContacts %></h3>
                        <p>Total Contacts</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= data.stats.newsletterSubscribers %></h3>
                        <p>Newsletter Subscribers</p>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="dashboard-grid">
                <!-- Recent Contacts -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h3>Recent Submissions</h3>
                        <a href="/admin/submissions" class="view-all">View All</a>
                    </div>
                    <div class="card-content">
                        <% if (data.recentContacts.length > 0) { %>
                            <% data.recentContacts.forEach(contact => { %>
                                <div class="contact-item">
                                    <div class="contact-info">
                                        <h4><%= contact.name %></h4>
                                        <p><%= contact.email %></p>
                                        <span class="service-tag"><%= contact.service %></span>
                                        <span class="source-tag"><%= contact.source %></span>
                                    </div>
                                    <div class="contact-meta">
                                        <span class="date"><%= new Date(contact.date).toLocaleDateString() %></span>
                                        <span class="status status-<%= contact.status %>"><%= contact.status.replace('-', ' ') %></span>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="no-data">No recent contacts</p>
                        <% } %>
                    </div>
                </div>

                <!-- Recent Projects -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h3>Recent Projects</h3>
                        <a href="/admin/projects" class="view-all">View All</a>
                    </div>
                    <div class="card-content">
                        <% if (data.recentProjects.length > 0) { %>
                            <% data.recentProjects.forEach(project => { %>
                                <div class="project-item">
                                    <div class="project-info">
                                        <h4><%= project.name %></h4>
                                        <p><%= project.client %></p>
                                    </div>
                                    <div class="project-meta">
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: <%= project.progress %>%"></div>
                                        </div>
                                        <span class="progress-text"><%= project.progress %>%</span>
                                        <span class="status status-<%= project.status %>"><%= project.status.replace('-', ' ') %></span>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="no-data">No recent projects</p>
                        <% } %>
                    </div>
                </div>

                <!-- Newsletter Subscriptions -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h3>Recent Newsletter Subscriptions</h3>
                        <span class="view-all"><%= data.stats.newsletterSubscribers %> Total</span>
                    </div>
                    <div class="card-content">
                        <% if (data.recentNewsletters && data.recentNewsletters.length > 0) { %>
                            <% data.recentNewsletters.forEach(newsletter => { %>
                                <div class="newsletter-item">
                                    <div class="newsletter-info">
                                        <i class="fas fa-envelope"></i>
                                        <span><%= newsletter.email %></span>
                                    </div>
                                    <div class="newsletter-meta">
                                        <span class="date"><%= new Date(newsletter.date).toLocaleDateString() %></span>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="no-data">No recent subscriptions</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('../partials/admin-styles') %>
    <style>
        /* Dashboard-specific styles */
        .admin-main {
            padding: 1.5rem;
        }

        .dashboard-header {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            padding: 2rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 8px 32px rgba(47, 95, 218, 0.3);
        }

        .header-content h1 {
            margin: 0 0 0.5rem 0;
            font-size: 2rem;
            font-weight: 700;
        }

        .header-content p {
            margin: 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

        .quick-stats {
            display: flex;
            gap: 2rem;
        }

        .quick-stat {
            text-align: center;
        }

        .stat-value {
            display: block;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            display: flex;
            align-items: center;
            gap: 1.5rem;
            transition: all 0.3s ease;
            border: 1px solid #f0f0f0;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .stat-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.8rem;
            box-shadow: 0 4px 15px rgba(47, 95, 218, 0.3);
        }

        .stat-content h3 {
            font-size: 2.2rem;
            margin: 0 0 0.25rem 0;
            color: var(--dark);
            font-weight: 700;
        }

        .stat-content p {
            margin: 0;
            color: var(--medium-gray);
            font-weight: 500;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
            gap: 2rem;
        }

        .dashboard-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }

        .dashboard-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .card-header {
            padding: 2rem 2rem 1rem 2rem;
            border-bottom: 1px solid #f0f0f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-header h3 {
            margin: 0;
            color: var(--dark);
            font-size: 1.3rem;
            font-weight: 600;
        }

        .view-all {
            color: var(--primary-color);
            text-decoration: none;
            font-size: 0.9rem;
        }

        .view-all:hover {
            text-decoration: underline;
        }

        .card-content {
            padding: 1rem 2rem 2rem 2rem;
        }

        /* Contact Items */
        .contact-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid var(--light-gray);
        }

        .contact-item:last-child {
            border-bottom: none;
        }

        .contact-info h4 {
            margin: 0 0 0.25rem 0;
            color: var(--dark);
        }

        .contact-info p {
            margin: 0 0 0.5rem 0;
            color: var(--medium-gray);
            font-size: 0.9rem;
        }

        .service-tag {
            background: var(--primary-color);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            margin-right: 0.5rem;
        }

        .source-tag {
            background: var(--secondary-color);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
        }

        .newsletter-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--light-gray);
        }

        .newsletter-item:last-child {
            border-bottom: none;
        }

        .newsletter-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .newsletter-info i {
            color: var(--primary-color);
            width: 16px;
        }

        .newsletter-meta .date {
            font-size: 0.8rem;
            color: var(--medium-gray);
        }

        .contact-meta {
            text-align: right;
        }

        .date {
            display: block;
            font-size: 0.8rem;
            color: var(--medium-gray);
            margin-bottom: 0.5rem;
        }

        .status {
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            text-transform: capitalize;
        }

        .status-new {
            background: #e3f2fd;
            color: #1976d2;
        }

        .status-contacted {
            background: #fff3e0;
            color: #f57c00;
        }

        .status-proposal-sent {
            background: #f3e5f5;
            color: #7b1fa2;
        }

        .status-in-progress {
            background: #e8f5e8;
            color: #388e3c;
        }

        .status-completed {
            background: #e0f2f1;
            color: #00796b;
        }

        /* Project Items */
        .project-item {
            padding: 1rem 0;
            border-bottom: 1px solid var(--light-gray);
        }

        .project-item:last-child {
            border-bottom: none;
        }

        .project-info h4 {
            margin: 0 0 0.25rem 0;
            color: var(--dark);
        }

        .project-info p {
            margin: 0 0 0.75rem 0;
            color: var(--medium-gray);
            font-size: 0.9rem;
        }

        .project-meta {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .progress-bar {
            flex: 1;
            height: 8px;
            background: var(--light-gray);
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: var(--primary-color);
            transition: width 0.3s ease;
        }

        .progress-text {
            font-size: 0.9rem;
            color: var(--medium-gray);
            min-width: 40px;
        }

        .no-data {
            text-align: center;
            color: var(--medium-gray);
            font-style: italic;
        }

        @media (max-width: 768px) {
            .admin-main {
                padding: 1rem;
            }

            .dashboard-header {
                flex-direction: column;
                text-align: center;
                gap: 1.5rem;
            }

            .quick-stats {
                flex-direction: column;
                gap: 1rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .dashboard-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .stat-card {
                padding: 1.5rem;
            }

            .card-header {
                padding: 1.5rem 1.5rem 1rem 1.5rem;
            }

            .card-content {
                padding: 1rem 1.5rem 1.5rem 1.5rem;
            }
        }
    </style>

    <script>
        // Auto-refresh dashboard data every 30 seconds
        setInterval(async () => {
            try {
                const response = await fetch('/admin/api/stats');
                const stats = await response.json();
                // Update stats if needed
            } catch (error) {
                console.error('Failed to refresh stats:', error);
            }
        }, 30000);
    </script>
</body>
</html>