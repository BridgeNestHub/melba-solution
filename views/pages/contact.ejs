<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/nav') %>

    <!-- Contact Hero Section -->
    <section class="contact-hero">
        <div class="contact-hero-content">
            <h1>Get In Touch</h1>
            <p>Ready to transform your business? Let's discuss how we can help you achieve your digital goals.</p>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-section">
        <div class="section-container">
            <div class="contact-grid">
                <div class="contact-info">
                    <h2>Let's Start a Conversation</h2>
                    <p>We're here to help you take your business to the next level. Reach out to us and let's discuss your project.</p>
                    
                    <div class="contact-details">
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <h4>Email Us</h4>
                                <p>contact@melbasolution.com</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <div>
                                <h4>Call Us</h4>
                                <p>+1 (206) 240-9455</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <h4>Business Hours</h4>
                                <p>Mon - Fri: 9:00 AM - 6:00 PM EST</p>
                            </div>
                        </div>
                    </div>

                    <div class="social-connect">
                        <h4>Connect With Us</h4>
                        <div class="social-links">
                            <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
                            <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                            <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                            <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                        </div>
                    </div>
                </div>

                <div class="contact-form-container">
                    <form class="contact-form" method="POST" action="/contact">
                        <h3>Send Us a Message</h3>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Full Name *</label>
                                <input type="text" id="name" name="name" value="<%= typeof formData !== 'undefined' ? formData.name || '' : '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email Address *</label>
                                <input type="email" id="email" name="email" value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input type="tel" id="phone" name="phone" value="<%= typeof formData !== 'undefined' ? formData.phone || '' : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="company">Company Name</label>
                                <input type="text" id="company" name="company" value="<%= typeof formData !== 'undefined' ? formData.company || '' : '' %>">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="service">Service Interested In *</label>
                                <select id="service" name="service" required>
                                    <option value="">Select a service</option>
                                    <option value="web-development" <%= typeof formData !== 'undefined' && formData.service === 'web-development' ? 'selected' : '' %>>Web Development</option>
                                    <option value="branding" <%= typeof formData !== 'undefined' && formData.service === 'branding' ? 'selected' : '' %>>Branding & Design</option>
                                    <option value="digital-marketing" <%= typeof formData !== 'undefined' && formData.service === 'digital-marketing' ? 'selected' : '' %>>Digital Marketing</option>
                                    <option value="ecommerce" <%= typeof formData !== 'undefined' && formData.service === 'ecommerce' ? 'selected' : '' %>>E-commerce Solutions</option>
                                    <option value="consultation" <%= typeof formData !== 'undefined' && formData.service === 'consultation' ? 'selected' : '' %>>Consultation</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="budget">Project Budget</label>
                                <select id="budget" name="budget">
                                    <option value="">Select budget range (Optional)</option>
                                    <option value="under-5k" <%= typeof formData !== 'undefined' && formData.budget === 'under-5k' ? 'selected' : '' %>>Under $5,000</option>
                                    <option value="5k-15k" <%= typeof formData !== 'undefined' && formData.budget === '5k-15k' ? 'selected' : '' %>>$5,000 - $15,000</option>
                                    <option value="15k-50k" <%= typeof formData !== 'undefined' && formData.budget === '15k-50k' ? 'selected' : '' %>>$15,000 - $50,000</option>
                                    <option value="over-50k" <%= typeof formData !== 'undefined' && formData.budget === 'over-50k' ? 'selected' : '' %>>Over $50,000</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="timeline">Project Timeline</label>
                            <select id="timeline" name="timeline">
                                <option value="">Select timeline (Optional)</option>
                                <option value="asap" <%= typeof formData !== 'undefined' && formData.timeline === 'asap' ? 'selected' : '' %>>ASAP</option>
                                <option value="1-3-months" <%= typeof formData !== 'undefined' && formData.timeline === '1-3-months' ? 'selected' : '' %>>1-3 months</option>
                                <option value="3-6-months" <%= typeof formData !== 'undefined' && formData.timeline === '3-6-months' ? 'selected' : '' %>>3-6 months</option>
                                <option value="flexible" <%= typeof formData !== 'undefined' && formData.timeline === 'flexible' ? 'selected' : '' %>>Flexible</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="message">Project Details *</label>
                            <textarea id="message" name="message" rows="5" placeholder="Tell us about your project, goals, and any specific requirements... (minimum 10 characters)" required><%= typeof formData !== 'undefined' ? formData.message || '' : '' %></textarea>
                        </div>

                        <button type="submit" class="submit-btn">
                            <span class="btn-text">Send Message</span>
                            <i class="fas fa-paper-plane"></i>
                        </button>

                        <p class="form-note">
                            <i class="fas fa-shield-alt"></i>
                            Your information is secure and will never be shared with third parties.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
        <div class="section-container">
            <div class="section-header">
                <h2>Frequently Asked Questions</h2>
                <p>Quick answers to common questions about our services</p>
            </div>
            
            <div class="faq-container">
                <div class="faq-item">
                    <div class="faq-question">
                        <h4>How long does a typical project take?</h4>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Project timelines vary depending on scope and complexity. A simple website typically takes 4-6 weeks, while comprehensive branding and marketing projects can take 8-12 weeks. We'll provide a detailed timeline during our initial consultation.</p>
                    </div>
                </div>

                <div class="faq-item">
                    <div class="faq-question">
                        <h4>What's included in your web development service?</h4>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Our web development service includes custom design, responsive development, SEO optimization, content management system, security features, performance optimization, and 3 months of free support and maintenance.</p>
                    </div>
                </div>

                <div class="faq-item">
                    <div class="faq-question">
                        <h4>Do you work with businesses outside the US?</h4>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Yes! We work with clients globally. Our team is experienced in working across different time zones and we use modern collaboration tools to ensure smooth communication throughout the project.</p>
                    </div>
                </div>

                <div class="faq-item">
                    <div class="faq-question">
                        <h4>What makes MelbaSolution different from other agencies?</h4>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>We focus specifically on transforming local businesses into global brands. Our team combines technical expertise with deep understanding of local market dynamics and global digital trends. We provide end-to-end solutions rather than just individual services.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Success Message Modal -->
    <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="message-overlay" id="messageOverlay">
            <div class="success-message-modal" id="successMessage">
                <div class="message-content">
                    <div class="message-icon success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="message-text">
                        <h3>Message Sent Successfully!</h3>
                        <p><%= successMessage %></p>
                        <div class="message-details">
                            <div class="detail-item">
                                <i class="fas fa-clock"></i>
                                <span>We'll respond within 24 hours</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-envelope"></i>
                                <span>Check your email for confirmation</span>
                            </div>
                        </div>
                    </div>
                    <button class="close-btn" data-action="close-message">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Error Message Modal -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="message-overlay" id="messageOverlay">
            <div class="error-message-modal" id="errorMessage">
                <div class="message-content">
                    <div class="message-icon error-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="message-text">
                        <h3>Please Fix the Following Issues</h3>
                        <div class="error-list">
                            <% errors.forEach(error => { %>
                                <div class="error-item">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <span><%= error.msg %></span>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                    <button class="close-btn" data-action="close-message">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    <% } %>

    <%- include('../partials/footer') %>

    <script src="/js/main.js"></script>
    <script>
        // Contact page specific JavaScript - CSP compliant
        document.addEventListener('DOMContentLoaded', function() {
            
            // Close message function
            function closeMessage() {
                const overlay = document.getElementById('messageOverlay');
                if (overlay) {
                    overlay.classList.add('fade-out');
                    setTimeout(() => {
                        overlay.remove();
                    }, 300);
                }
            }
            
            // Add event listeners for close buttons
            const closeButtons = document.querySelectorAll('[data-action="close-message"]');
            closeButtons.forEach(button => {
                button.addEventListener('click', closeMessage);
            });
            
            // Auto-hide success message after 8 seconds and clean URL
            const successMessage = document.getElementById('successMessage');
            if (successMessage) {
                // Clean URL by removing success query parameter
                if (window.location.search.includes('success=')) {
                    const url = new URL(window.location);
                    url.searchParams.delete('success');
                    window.history.replaceState({}, document.title, url.pathname);
                }
                
                setTimeout(() => {
                    closeMessage();
                }, 8000);
            }

            // Close modal when clicking on overlay
            const overlay = document.getElementById('messageOverlay');
            if (overlay) {
                overlay.addEventListener('click', function(e) {
                    if (e.target.classList.contains('message-overlay')) {
                        closeMessage();
                    }
                });
            }

            // Close modal with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && document.getElementById('messageOverlay')) {
                    closeMessage();
                }
            });

            // Form validation helper text
            const messageField = document.getElementById('message');
            if (messageField) {
                messageField.addEventListener('input', function() {
                    const length = this.value.length;
                    if (length > 0 && length < 10) {
                        this.style.borderColor = '#EF4444';
                    } else {
                        this.style.borderColor = '';
                    }
                });
            }
        });
    </script>
    
    <style>
        /* Message Overlay Styles */
        .message-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            animation: fadeIn 0.3s ease-out;
            backdrop-filter: blur(4px);
        }

        .message-overlay.fade-out {
            animation: fadeOut 0.3s ease-out;
        }

        .success-message-modal,
        .error-message-modal {
            background: white;
            border-radius: 16px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            max-width: 500px;
            width: 90%;
            margin: 0 20px;
            animation: slideUp 0.3s ease-out;
            position: relative;
            overflow: hidden;
        }

        .success-message-modal::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #10B981, #34D399);
        }

        .error-message-modal::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #EF4444, #F87171);
        }

        .message-content {
            padding: 32px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            position: relative;
        }

        .message-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin: 0 auto 20px;
        }

        .success-icon {
            color: #10B981;
            background-color: #ECFDF5;
            border: 3px solid #D1FAE5;
        }

        .error-icon {
            color: #EF4444;
            background-color: #FEF2F2;
            border: 3px solid #FECACA;
        }

        .message-text h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0 0 12px 0;
            color: #1F2937;
        }

        .message-text p {
            font-size: 1rem;
            color: #6B7280;
            margin: 0 0 20px 0;
            line-height: 1.6;
        }

        .message-details {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-top: 20px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            color: #6B7280;
            font-size: 0.9rem;
        }

        .detail-item i {
            color: #10B981;
            width: 16px;
            text-align: center;
        }

        .error-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-top: 16px;
        }

        .error-item {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #EF4444;
            font-size: 0.95rem;
            text-align: left;
            background-color: #FEF2F2;
            padding: 12px 16px;
            border-radius: 8px;
            border-left: 3px solid #EF4444;
        }

        .error-item i {
            font-size: 0.9rem;
            flex-shrink: 0;
        }

        .close-btn {
            position: absolute;
            top: 16px;
            right: 16px;
            background: none;
            border: none;
            font-size: 1.2rem;
            color: #9CA3AF;
            cursor: pointer;
            padding: 8px;
            border-radius: 50%;
            transition: all 0.2s ease;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .close-btn:hover {
            background-color: #F3F4F6;
            color: #374151;
            transform: scale(1.1);
        }

        /* Loading button state */
        .submit-btn.btn--loading {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .submit-btn.btn--loading .btn-text::after {
            content: '';
            display: inline-block;
            width: 16px;
            height: 16px;
            margin-left: 8px;
            border: 2px solid transparent;
            border-top: 2px solid currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        /* Form validation styles */
        #message[style*="border-color: rgb(239, 68, 68)"] + .form-note {
            color: #EF4444;
            font-weight: 500;
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes fadeOut {
            from {
                opacity: 1;
            }
            to {
                opacity: 0;
            }
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px) scale(0.9);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            .message-content {
                padding: 24px;
            }

            .message-icon {
                font-size: 3rem;
                width: 64px;
                height: 64px;
            }

            .message-text h3 {
                font-size: 1.3rem;
            }

            .message-details {
                margin-top: 16px;
            }

            .detail-item {
                font-size: 0.85rem;
            }

            .error-item {
                font-size: 0.9rem;
                padding: 10px 14px;
            }
        }

        @media (max-width: 480px) {
            .success-message-modal,
            .error-message-modal {
                width: 95%;
                margin: 0 10px;
            }

            .message-content {
                padding: 20px;
            }

            .message-details {
                gap: 8px;
            }

            .detail-item {
                font-size: 0.8rem;
            }
        }
    </style>
</body>
</html>