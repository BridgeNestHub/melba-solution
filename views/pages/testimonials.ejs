    <script>
        // Transformation Modal Functionality - CSP Compliant
        document.addEventListener('DOMContentLoaded', function() {
            const transformationModal = document.getElementById('transformationModal');
            const transformationBtn = document.getElementById('transformationBtn');
            const transformationForm = document.getElementById('transformationForm');
            
            // Open modal when button is clicked
            if (transformationBtn) {
                transformationBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    transformationModal.style.display = 'block';
                    document.body.style.overflow = 'hidden';
                    
                    // Focus first input for accessibility
                    const firstInput = transformationModal.querySelector('input, select, textarea');
                    if (firstInput) firstInput.focus();
                });
            }
            
            // Close modal function
            function closeTransformationModal() {
                transformationModal.style.display = 'none';
                document.body.style.overflow = 'auto';
                if (transformationForm) {
                    transformationForm.reset();
                }
            }
            
            // Close message function
            function closeMessage() {
                const overlay = document.getElementById('messageOverlay');
                if (overlay) {
                    overlay.classList.add('fade-out');
                    setTimeout(() => {
                        overlay.remove();
                    }, 300);
                }
            }
            
            // Event listeners for close buttons
            const closeButtons = document.querySelectorAll('[data-action="close-transformation"]');
            closeButtons.forEach(button => {
                button.addEventListener('click', closeTransformationModal);
            });
            
            const messageCloseButtons = document.querySelectorAll('[data-action="close-message"]');
            messageCloseButtons.forEach(button => {
                button.addEventListener('click', closeMessage);
            });
            
            // Close modal when clicking outside
            if (transformationModal) {
                transformationModal.addEventListener('click', function(event) {
                    if (event.target === transformationModal) {
                        closeTransformationModal();
                    }
                });
            }
            
            // Close message overlay when clicking outside
            const messageOverlay = document.getElementById('messageOverlay');
            if (messageOverlay) {
                messageOverlay.addEventListener('click', function(event) {
                    if (event.target.classList.contains('message-overlay')) {
                        closeMessage();
                    }
                });
            }
            
            // Close modals with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    if (transformationModal && transformationModal.style.display === 'block') {
                        closeTransformationModal();
                    }
                    if (document.getElementById('messageOverlay')) {
                        closeMessage();
                    }
                }
            });
            
            // Form submission handling
            if (transformationForm) {
                transformationForm.addEventListener('submit', function(e) {
                    // Collect checkbox values before submission
                    const goals = Array.from(document.querySelectorAll('input[name="goals"]:checked'))
                        .map(cb => cb.value).join(', ');
                    
                    // Add goals to message field
                    const messageField = document.getElementById('transformationMessage');
                    const currentMessage = messageField.value;
                    
                    if (goals) {
                        messageField.value = currentMessage + '\n\nBusiness Goals: ' + goals;
                    }
                    
                    // Add loading state
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const btnText = submitBtn.querySelector('.btn-text');
                    
                    if (submitBtn && btnText) {
                        submitBtn.classList.add('btn--loading');
                        btnText.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                        submitBtn.disabled = true;
                    }
                    
                    // Let the form submit naturally to the server
                    // Don't prevent default - server will handle validation and response
                });
            }
            
            // Auto-hide success message and clean URL
            const successMessage = document.getElementById('successMessage');
            if (successMessage) {
                // Clean URL by removing success query parameter
                if (window.location.search.includes('success=')) {
                    const url = new URL(window.location);
                    url.searchParams.delete('success');
                    window.history.replaceState({}, document.title, url.pathname);
                }
                
                setTimeout(() => {
                    closeMessage();
                }, 8000);
            }
            
            // Form validation helper
            const messageField = document.getElementById('transformationMessage');
            if (messageField) {
                messageField.addEventListener('input', function() {
                    const length = this.value.length;
                    if (length > 0 && length < 10) {
                        this.style.borderColor = '#EF4444';
                    } else {
                        this.style.borderColor = '';
                    }
                });
            }
            
            // Checkbox validation
            const checkboxGroup = document.querySelector('.checkbox-group');
            if (checkboxGroup) {
                const checkboxes = checkboxGroup.querySelectorAll('input[type="checkbox"]');
                checkboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', function() {
                        const checkedBoxes = checkboxGroup.querySelectorAll('input[type="checkbox"]:checked');
                        if (checkedBoxes.length === 0) {
                            checkboxGroup.style.borderColor = '#EF4444';
                        } else {
                            checkboxGroup.style.borderColor = '';
                        }
                    });
                });
            }
        });
