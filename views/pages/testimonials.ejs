    <!-- Transformation Modal -->
    <div id="transformationModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Start Your Digital Transformation</h3>
                <span class="close-modal" data-action="close-transformation">&times;</span>
            </div>
            <div class="modal-body">
                <form id="transformationForm" action="/transformation" method="POST">
                    <input type="hidden" name="service" value="digital-transformation">
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="businessName">Business Name *</label>
                            <input type="text" id="businessName" name="company" required>
                        </div>
                        <div class="form-group">
